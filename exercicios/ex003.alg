algoritmo "ex003"
var
   nome: caractere
   salario: real
inicio
   escreva("nome: ")
   leia(nome)

   escreva("salario (R$): ")
   leia(salario)

   escreval("nome do funcionario: ", nome)
   escreval("salario: ", salario:1:2)
   escreval("o funcionario ", nome, " tem um salario de R$ ", salario:1:2, " em junho")
fimalgoritmo